{
  "manifest_version": 2,

  "name": "Cart Mango",
  "description": "This extension shows you the future of online shopping",
  "version": "1.0.3",
  "author": "Captain Pangyo",

  "browser_action": {
    "default_icon": {
        "19" : "img/icon-tilted.png",
        "38" : "img/icon-tilted.png"
      },
    "default_popup": "popup.html"
  },
  "icons": {
    "16"  : "img/icon-tilted.png",
    "48"  : "img/icon-tilted.png",
    "128" : "img/icon-tilted.png"
  },

  "background": {
    "scripts": [
      "chrome_ex_oauthsimple.js",
      "chrome_ex_oauth.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*","<all_urls>"],
      "js": ["js/jquery.js","js/content_script.js"]
    }
  ],
  "permissions": [
    "tabs", "identity", "identity.email", "<all_urls>", "storage", "http://*/*", "https://*/*",
    "https://docs.google.com/feeds/*",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken"
  ],
  "oauth2": {
    "client_id": "361454977408-ldljcghuo8h0lsglh21a61njfijt76gs.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/plus.login",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }

}
